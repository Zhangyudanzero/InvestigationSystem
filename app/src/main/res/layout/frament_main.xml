<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <Button
        android:id="@+id/main_keymonitoring"
        android:layout_width="230dp"
        android:layout_height="130dp"
        android:background="@color/main_blue"
        android:text="重点监测"
        android:textColor="@color/main_white"
        android:layout_marginBottom="10dp"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/main_questionnaire_inquiry"
        android:layout_width="230dp"
        android:layout_height="130dp"
        android:background="@drawable/btn_bk_green_nostorge"
        android:layout_below="@+id/main_keymonitoring"
        android:textColor="@color/main_white"
        android:text="问卷查询"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/main_question_investigation"
        android:layout_width="300dp"
        android:layout_height="270dp"
        android:background="@drawable/btn_bk_blue_nostorge"
        android:text="问卷调查"
        android:layout_toRightOf="@+id/main_questionnaire_inquiry"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/main_white"
        android:textSize="40sp"
        />

    <Button
        android:id="@+id/main_comments_suggestions"
        android:layout_width="230dp"
        android:layout_height="130dp"
        android:background="@color/main_green_deep"
        android:layout_toRightOf="@+id/main_question_investigation"
        android:text="意见建议"
        android:layout_marginBottom="10dp"
        android:textColor="@color/main_white"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/main_data_update"
        android:layout_width="230dp"
        android:layout_height="130dp"
        android:background="@color/main_organ"
        android:layout_toRightOf="@+id/main_question_investigation"
        android:layout_below="@+id/main_comments_suggestions"
        android:text="数据更新"
        android:textColor="@color/main_white"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/main_exit"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@color/main_red"
        android:layout_below="@+id/main_question_investigation"
        android:text="退出系统"
        android:layout_toRightOf="@+id/main_keymonitoring"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textColor="@color/main_white"
        android:layout_marginLeft="20dp"
        />

</RelativeLayout>