<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_ploaddata"
        android:textSize="30sp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        />

    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/main_gray"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        >

        <Button
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:text="@string/str_questionnaire_upload"
            android:textSize="25sp"
            android:background="@color/main_blue"
            android:textColor="@color/main_white"
            />

        <Button
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:text="@string/str_feedback_information_upload"
            android:textSize="25sp"
            android:layout_marginLeft="50dp"
            android:background="@color/main_puper"
            android:textColor="@color/main_white"
            />

        <Button
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:text="@string/str_upload_all"
            android:textSize="25sp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/main_white"
            android:background="@color/main_blue_deep"
            />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_ploaddata"
        android:textSize="30sp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="50dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/main_gray"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        >

        <Button
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:text="调查问卷获取"
            android:textSize="25sp"
            android:textColor="@color/main_white"
            android:background="@color/main_green"
            />

        <Button
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:text="重点监测内容获取"
            android:textSize="25sp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/main_white"
            android:background="@color/main_red"
            />

        <Button
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:text="更新个人信息"
            android:textSize="25sp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/main_white"
            android:background="@color/main_organ"
            />

    </LinearLayout>

</LinearLayout>